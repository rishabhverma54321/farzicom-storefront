{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "Themes/*": ["./src/themes/plixlifefc/*"],
      "@globalTypes/*": ["./gqlTypes/*"],
      "@utils/*": ["./src/utils/*"],
      "@styles/*": ["./src/styles/*"],
      "@styles": ["./src/styles/index.ts"],
      "@hooks/*": ["./src/hooks/*"],
      "images/*": ["./src/images/*"],
      "@types/*": ["./src/types/*"]
    },
    "plugins": [
      {
        "transform": "@formatjs/ts-transformer",
        "import": "default"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
